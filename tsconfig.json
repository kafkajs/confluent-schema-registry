{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "declarations/*"]
    },
    "outDir": "dist",
    "lib": ["es2019", "dom"], // due to mappersmith's typings (e.g. XMLHttpRequest, GlobalFetch)
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "declarations/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
